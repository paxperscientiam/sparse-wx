// official guide: https://github.com/google/clasp/blob/master/docs/typescript.md
// clasp push transpiles ES6+ into ES3 (using ts2gas) before pushing files to the Apps Script server.
// I DONT NEED TO TRANSPILE
{
  "compilerOptions": {
    "types" : ["app", "node", "google-apps-script", "@paxperscientiam/dlv.ts"],
    "typeRoots": [
      "src/@types",
      "node_modules/@types"
    ],
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
        "~*": ["./*"]
    },
    "allowJs": true,
    "checkJs": false,
    "module": "es6",
    // GAP uses es3 with some es5 features sprinkled in ...
    "target": "es3",
    // per clasp guide
    "lib": ["esnext"],
    // per clasp guide
    "experimentalDecorators": true,
    "extendedDiagnostics": true,
    "moduleResolution": "node",
    "noImplicitUseStrict": true,
    "esModuleInterop": true
  },
  "exclude": [
    "src/Code/Tests.ts"
  ],
  "include": [
  ],
  "files": [
    "src/index.ts"
  ]
}
