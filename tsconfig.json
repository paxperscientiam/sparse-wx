{
  "compilerOptions": {
    "types" : ["app", "nws", "node", "google-apps-script", "@paxperscientiam/dlv.ts"],
    "strict": true,
    "typeRoots": [
      "src/@types",
      "node_modules/@types"
    ],
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"]
    },
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es6",
    "importsNotUsedAsValues": "error"
  },
  "exclude": [
    "src/test.ts",
    "src/Code/Tests.ts"
  ],
  "include": ["src/**/*"],
  "files": [
    "src/index.ts"
  ]
}
